<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/cool_pink"
    android:layout_margin="10dp">
    <com.google.android.material.imageview.ShapeableImageView
       android:id="@+id/plalistImg"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/splash_screen"
        app:shapeAppearanceOverlay="@style/curved_bg"
        android:contentDescription="@string/song_image"/>
    <TextView
        android:id="@+id/plalistText"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text="@string/plalist_name"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:contentDescription="@string/plalist_name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="130dp"/>
    <ImageButton
        android:id="@+id/plalistDelete"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_delete"
        app:tint="?attr/themeColor"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="110dp"
        android:contentDescription="@string/plalist_delete"/>


</com.google.android.material.card.MaterialCardView>